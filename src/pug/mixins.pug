mixin opengraph(data)
    // opengraph
    each value, key in data
        meta(property='og:' + key content=value)

mixin favicon(data)
    // favicon
    if data.apple
        link(rel='apple-touch-icon' sizes=`${data.apple}x${data.apple}` href='/apple-touch-icon.png')
    each size in data.sizes || []
        link(rel='icon' type='image/png' sizes=`${size}x${size}` href=`/favicon-${size}x${size}.png`)
    if data.manifest
        link(rel='manifest' href='/site.webmanifest')
    if data.safari
        link(rel='mask-icon' href='/safari-pinned-tab.svg' color=data.color)
    if data.ico
        link(rel='shortcut icon' href='/favicon.ico')
    if data.mstile
        meta(name='msapplication-TileColor' content=data.mstile)
    if data.color
        meta(name='theme-color' content=data.color)

mixin hexagon(data)
    .hexagon-group
        each value in data
            -const [icon, url] = value
            a(href=url)
                .hexagon-wrapper
                    .hexagon
                        i(class=icon)
